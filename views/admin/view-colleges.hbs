<section>
    
  <div class="container">
    <div class="row mt-4">




      <a href="/admin/add-college" class="btn btn-success ml-auto">Add Colleges</a>
    </div>
    <table id="table_id" class="table mt-5">
      <thead>
        <tr>
          <th>No.</th>
          <th>College</th>
          <th>Treasury</th>
          <th>Malayalam</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each colleges}}
        <tr>
          <td></td>
          <td>{{this.college}}</td>
          <td>{{this.treasury}}</td>
          <td>{{this.malayalam}}</td>
          <td>
            <a href="/admin/edit-college/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-college/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you sure to delete {{this.college}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#table_id').DataTable();
  });
</script>


<style>
  body {
    counter-reset: Count-Value;
  }

  table {
    border-collapse: separate;
  }

  tr td:first-child:before {
    counter-increment: Count-Value;
    content: counter(Count-Value);
  }
</style>