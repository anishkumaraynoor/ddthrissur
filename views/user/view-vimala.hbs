<section>
    
  <div class="container">
    <div class="row mt-4">




      <a href="/add-vimala" class="btn btn-success ml-auto">Add Staff</a>
    </div>
    <table id="table_id" class="table mt-5">
      <thead>
        <tr>
          <th>No.</th>
          <th>Staff Name</th>
          <th>Designation</th>
        </tr>
      </thead>
      <tbody>
        {{#each vimala}}
        <tr>
          <td></td>
          <td>{{this.staffname}}</td>
          <td>{{this.designation}}</td>
          <td>
            <a href="/edit-vimala/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/delete-vimala/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you sure to delete {{this.vimala}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#table_id').DataTable();
  });
</script>


<style>
  body {
    counter-reset: Count-Value;
  }

  table {
    border-collapse: separate;
  }

  tr td:first-child:before {
    counter-increment: Count-Value;
    content: counter(Count-Value);
  }
</style>