<section>
   
   
   
   
   
   
   
   
        
        <table class="table mt-5" id="datatable">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">File No.</th>
      <th scope="col">Date</th>
      <th scope="col">College</th>
      <th scope="col">Name</th>
      <th scope="col">Designation</th>
      <th scope="col">Loan Amount</th>
      <th>Option</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each closure}}
    <tr>
      <td scope="row"></td>
      <td>{{this.fileno}}</td>
      <td>{{this.date}}</td>
      <td>{{this.college}}</td>
      <td>{{this.name}}</td>
      <td>{{this.designation}}</td>
      <td>
        <a href="/edit-closure/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/delete-closure/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
   
</section>
<script>
  $(document).ready( function () {
    $('#datatable').DataTable();
  } );
</script>

<style>
  body {
    counter-reset: Count-Value;
  }

  table {
    border-collapse: separate;
  }

  tr td:first-child:before {
    counter-increment: Count-Value;
    content: counter(Count-Value);
  }
</style>